#!/bin/bash

# Auto-Launcher for Go Transaction Service Installer
# Detects OS and runs appropriate installer script

echo "üöÄ Go Transaction Service Auto-Installer"
echo "========================================"
echo

# Detect operating system
if [[ "$OSTYPE" == "msys" ]] || [[ "$OSTYPE" == "win32" ]] || [[ "$OS" == "Windows_NT" ]]; then
    echo "ü™ü Windows detected - Running install.bat"
    echo
    if [ -f "install.bat" ]; then
        cmd //c install.bat
    else
        echo "‚ùå install.bat not found"
        exit 1
    fi
elif [[ "$OSTYPE" == "darwin"* ]]; then
    echo "üçé macOS detected - Running install.sh"
    echo
    if [ -f "install.sh" ]; then
        chmod +x install.sh
        ./install.sh
    else
        echo "‚ùå install.sh not found"
        exit 1
    fi
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
    echo "üêß Linux detected - Running install.sh"
    echo
    if [ -f "install.sh" ]; then
        chmod +x install.sh
        ./install.sh
    else
        echo "‚ùå install.sh not found"
        exit 1
    fi
else
    echo "‚ùì Unknown OS detected - Using PHP installer"
    echo
    if [ -f "install.php" ]; then
        php install.php
    else
        echo "‚ùå install.php not found"
        exit 1
    fi
fi
