APP_NAME="Pintro Financial Admin"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost:8000
APP_VERSION=1.0.0

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=pintro_transaction_web
DB_USERNAME=postgres
DB_PASSWORD=password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=redis
CACHE_PREFIX=pintro_

MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@pintro.dev"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Transaction Service Configuration
TRANSACTION_SERVICE_URL=http://localhost:8080/api/v1
TRANSACTION_SERVICE_TIMEOUT=30

# Go Transaction Service Configuration (Legacy)
GO_TRANSACTION_SERVICE_URL=http://localhost:8080
GO_TRANSACTION_API_KEY=your-secure-api-key-here
GO_TRANSACTION_TIMEOUT=30

# Midtrans Payment Gateway Configuration
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_ENVIRONMENT=sandbox
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_IS_SANITIZED=true
MIDTRANS_IS_3DS=true

# JWT Configuration for Go Service Communication
JWT_SECRET=your-jwt-secret-key-for-go-service

# Filament Configuration
FILAMENT_PATH=admin
FILAMENT_DOMAIN=

# Admin Panel Configuration
ADMIN_DEFAULT_EMAIL=admin@pintro.dev
ADMIN_DEFAULT_PASSWORD=password
ADMIN_DEFAULT_NAME="Super Admin"

# Security Configuration
AUTH_GUARD=web
AUTH_PASSWORD_TIMEOUT=10800

# Performance Configuration
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# Monitoring & Logging
LOG_SLACK_WEBHOOK_URL=
SENTRY_LARAVEL_DSN=

# Feature Flags
FEATURE_NOTIFICATIONS=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_ADVANCED_REPORTING=true

# Rate Limiting
RATE_LIMIT_API=60
RATE_LIMIT_WEBHOOK=1000

# File Upload Limits
MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Backup Configuration
BACKUP_DISK=s3
BACKUP_SCHEDULE="0 2 * * *"

# Transaction Limits
MIN_TRANSACTION_AMOUNT=10000
MAX_TRANSACTION_AMOUNT=10000000
DEFAULT_TRANSACTION_FEE=2500
AUTO_APPROVE_THRESHOLD=100000

# System Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."
